# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 88
tab_width = 4
trim_trailing_whitespace = true

[*.{md,rst}]
trim_trailing_whitespace = false

[*.{toml,yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab

[*.bat]
end_of_line = crlf
indent_style = tab
